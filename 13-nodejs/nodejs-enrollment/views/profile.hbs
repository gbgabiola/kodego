<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enrollment System</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav>
      <h4>Enrollment System</h4>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-4">
          <div class="card">
            <div class="avatar-ctn">
              <img
                src="/img/avatar.png"
                class="avatar"
                alt="User profile picture"
              />
            </div>
            <div class="card-body">
              <h5 class="card-title">{{user.first_name}} {{user.last_name}}</h5>
              <p class="card-text">Some quick example text to build on the card
                title and make up the bulk of the card's content.
                <a href="#" class="btn btn-primary">{{user.email}}</a>
              </p>
            </div>
            {{! End of .card-body }}
          </div>
          {{! End of .card }}
        </div>

        <div class="col-8">
          <div class="card text-center">
            <div class="card-header">
              Profile Page
            </div>
            <div class="card-body">
              <h5 class="card-title">Hey {{user.first_name}}! Welcome back.</h5>
              <p class="card-text">This is your profile page where you can add
                all the information about yourself.</p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            {{! End of .card-body }}
            <div class="card-footer text-secondary">Node MySQL - Project</div>
          </div>
          {{! End of .card }}
        </div>
      </div>
      {{! End of .row }}

    </div>
    {{! End of .container }}

    <footer class="container fixed-bottom text-center">
      <p>Copyright &copy; 2021.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
