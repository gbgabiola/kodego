<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enrollment System</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav>
      <h4>Enrollment System</h4>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/students">List of Students</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>

    <div class="container mt-4">
      <div class="d-flex justify-content-end">
        <a href="/students/add" class="btn btn-primary">Add Student</a>
      </div>
      <h3>List of Students</h3>
      <table class="table table-striped table-hover">
        <tr>
          <th>#</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
        {{#each user}}
          <tr>
            <td>{{firstName}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td><a href="/auth/updateForm/{{this.email}}">Edit</a>
              <a
                href="/auth/deleteUser/{{this.email}}"
                onclick="return confirm('Are you sure to delete this user?');"
              >Delete</a></td>
          </tr>
        {{/each}}
      </table>

    </div>
    {{! End of .container }}

    <footer class="container fixed-bottom text-center">
      <p>Copyright &copy; 2021.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
